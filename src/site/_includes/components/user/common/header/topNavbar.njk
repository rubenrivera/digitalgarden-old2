<style>
  #top-horizontal-navbar ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    position: fixed;
    top: 0;
    width: 100%;
  }

  #top-horizontal-navbar ul li {
    float: left;
  }

  #top-horizontal-navbar ul li a {
    display: block;
    text-align: center;
    padding: 5px 7px;
    text-decoration: none;
    margin-top: 11px !important;
    margin-bottom: 11px !important;

  }

</style>
<nav id="top-horizontal-navbar" class="navbar">
  <ul>
      {% for item in i18nTopNavigation[page.lang] %}
      <li>
      <a
          href="{{ item.url }}"
          {{
          i18nHelpers.getLinkActiveState(item.url,
          page.url)
          |
          safe
          }}
          >{{ item.text }}</a
      >
      </li>
      {% endfor %}
      <li style="position: fixed; left: calc(50% - (230px/2));">
        {% include "components/searchButton.njk" %}
      </li>
      {% if eleventy.serverless %}
        <li style="float: right; margin-right: 10px;">
          {% if user %}
            {% include "components/logoutButton.njk" %}
          {% else %}
            {% include "components/loginButton.njk" %}
          {% endif %}
        </li>
      {% endif%}
  </ul>    
  
</nav>